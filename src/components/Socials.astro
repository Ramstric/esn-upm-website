---
const { size, styleGap } = Astro.props;
---

<div class={`container-socials ${styleGap}`}>
    <a href="https://www.instagram.com/esnupm" target="_blank" class="instagram" aria-label="Instagram icon">
        <svg width={size} height={size}> <use href="#instagram" /></svg>
    </a>

    <a href="https://www.facebook.com/esnupm/" target="_blank" class="facebook" aria-label="Facebook icon">
        <svg width={size} height={size}><use href="#facebook" /></svg>
    </a>

    <a href="https://www.twitter.com/esnupm" target="_blank" class="twitter-x" aria-label="Twitter icon">
        <svg width={size} height={size}><use href="#twitter-x" /></svg>
    </a>

    <a href="info@esnupm.org" target="_blank" class="email" aria-label="Email icon">
        <svg width={size} height={size}><use href="#email" /></svg>
    </a>
</div>

<!-- ------ Local style ------ -->

<style>
    .container-socials {
        display: flex;
        justify-content: space-between;
        box-sizing: border-box;

        width: 100%;
    }

    .big{
        gap: 2rem;
    }

    .small{
        gap: 1rem;
    }

   a.facebook {
        fill: rgb(8, 81, 225);
    }

    a.instagram {
        fill: rgb(184, 65, 253);
    }

    a.twitter-x {
        fill: rgb(255, 255, 255);
    }

    a {
        width: 40px;
    }

    a:hover {
        transition: all 0.25s ease;
        transform: scale(1.2);
        fill: white;
        filter: drop-shadow(0 0 4px black);
    }

    @media (min-width: 768px) {
        .container-socials {
            padding: 0 25px;
        }
    }

</style>

