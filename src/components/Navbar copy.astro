---
import Button from './Button.astro'
---

<div class="color-strip">
    {Array.from({ length: 5 }).map(() => (
        <div class="color-rectangle" style="background-color: var(--blue-light);"></div>
        <div class="color-rectangle" style="background-color: var(--pink);"></div>
        <div class="color-rectangle" style="background-color: var(--green);"></div>
        <div class="color-rectangle" style="background-color: var(--orange);"></div>
    ))}
</div>

<nav class="nav">
    <div class="logo">
        <a href="/" >
            <img src="/images/esn-logo.png" alt="Logo">
        </a>
    </div>

    <div class="pages">
        <a href="/" >Home</a>
        <a href="/resume/">First Steps</a>
        <a href="/projects/">ESNcard</a>
        <a href="/blog/">Eventos</a>
        <a href="/blog/">Documentos</a>
        <div>
            <Button innerHtml="<p-btn><pink>¡</pink>Quiero ser <pink><i>voluntario</i>!</pink></p-btn>" type="normal p-btn" bgcolor="var(--primary-color)" labelcolor="var(--background)">
        </div>
    </div>

    <div class="lang-icons">
        <a href="/es/">
            <img src="/images/spain.png" alt="Español" height="30">
        </a>
    </div>
</nav>

<!-- ------ Local style ------ -->

<style>
    .color-strip {
        display: flex;
        height: 5px;
        width: 100%;
    }

    .color-rectangle {
        flex: 1;
    }

    nav {
        background-color: #ffffff;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;

        height: 8vw;
        
        padding: 1rem 2.5rem;

        box-shadow: 0 4px 30px 0px rgba(0, 0, 0, 0.8);
    }

    .nav a {
        text-decoration: none;
        color: var(--secondary-color);

        transition: color .2s ease;
    }

    .nav a:hover {
        color: var(--primary-color);
    }

    .pages {
        display: flex;
        align-items: center;
        flex-direction: row;
        gap: clamp(1.8rem, -1.678rem + 5.565vw, 5rem);
    }

    .logo {
        height: 100%;
    }

    .logo img {
        height: 100%;
    }

    .lang-icons {
        display: flex;
        align-items: center;
    }

    .lang-icons img {
        height: 20px;
    }

    @media screen and (min-width: 1000px) {

        .lang-icons img {
            height: 30px;
        }
    }

</style>

