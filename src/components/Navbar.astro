<div class="color-strip">
    {Array.from({ length: 3 }).map(() => (
        <div class="color-rectangle" style="background-color: var(--blue-light);"></div>
        <div class="color-rectangle" style="background-color: var(--pink);"></div>
        <div class="color-rectangle" style="background-color: var(--green);"></div>
        <div class="color-rectangle" style="background-color: var(--orange);"></div>
    ))}
</div>

<nav class="nav">
    
    <a href="/" >
        <img id="esnLogo" src="/images/esn-logo.png" width="135" alt="Logo ESN">
    </a>

    
    <a href="/es/">
        <img src="/images/spain.png" alt="EspaÃ±ol" height="48">
    </a>
</nav>

<!-- ------ Local style ------ -->

<style>
    .color-strip {
        display: flex;
        height: 5px;
        width: 100%;
    }

    .color-rectangle {
        flex: 1;
    }

    nav {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;

        height: fit-content;
        padding: 0 10px;

        background-color: #ffffff;

        box-shadow: 0 4px 30px 0px rgba(0, 0, 0, 0.8);
    }
  
    #esnLogo {
        width: 135px;
    }
</style>

