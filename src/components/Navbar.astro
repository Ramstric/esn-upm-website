---
import Button from './Button.astro'
---

<div class="color-strip">
    {Array.from({ length: 5 }).map(() => (
        <div class="color-rectangle" style="background-color: var(--blue-light);"></div>
        <div class="color-rectangle" style="background-color: var(--pink);"></div>
        <div class="color-rectangle" style="background-color: var(--green);"></div>
        <div class="color-rectangle" style="background-color: var(--orange);"></div>
    ))}
</div>

<nav class="nav">
    
    <img id="esnLogo" src="/images/esn-logo.png" alt="Logo ESN">

    <div id="nav-full-link">
        <a href="/">Home</a>
        <a href="https://esnupm.org/es/firststeps">First Steps</a>
        <a href="https://esnupm.org/es/esncard">ESNcard</a>
        <a href="https://esnupm.org/es/descuentos">Descuentos</a>
        <a href="https://esnupm.org/es/eventos">Eventos</a>
        <Button innerHtml="<p-btn><pink><i>¡</i></pink>Quiero se <pink><i>voluntario!</i></pink></p-btn>" type="invert" bgcolor="black" labelcolor="white"/>
    </div>

    <div id="lang-select-full">
        <p>Idioma</p>
        <img src="/images/spain.png" alt="Español" height="48">
    </div>

    <a id="lang-select-mobile" href="/es/">
        <img src="/images/spain.png" alt="Español" height="40">
    </a>
</nav>

<!-- ------ Local style ------ -->

<style>
    .color-strip {
        display: flex;
        height: 5px;
        width: 100%;
    }

    .color-rectangle {
        flex: 1;
    }

    nav {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;

        height: fit-content;
        padding: 0 10px;

        background-color: #ffffff;

        box-shadow: 0 4px 30px 0px rgba(0, 0, 0, 0.8);
    }
  
    #esnLogo {
        width: 135px;
    }

    #nav-full-link {
        display: none;
        gap: 70px;
    }

    #lang-select-mobile {
        display:contents;
    }

    #lang-select-full {
        display: none;
        
        justify-content: space-between;
    }

    @media (min-width: 450px) {

        #esnLogo {
            width: 200px;
        }

        nav {
            padding: 0 50px;
        }

        #nav-full-link {
            display: flex;
            align-items: center;
        }

        #lang-select-mobile {
            display: none;
        }

        #lang-select-full {
            display: contents;
        }

    }

    a:hover {
        transition: all 0.25s ease;
        transform: scale(1.05);
        color: var(--primary-color);
    }

</style>

